{
  "version": 2,
  "builds": [
    {
      "src": "backend/server.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["backend/data/**"]
      }
    },
    {
      "src": "frontend/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/server.js",
      "headers": {
        "Content-Type": "application/json"
      }
    },
    {
      "src": "/(.*\\.css)",
      "dest": "frontend/$1",
      "headers": {
        "Content-Type": "text/css"
      }
    },
    {
      "src": "/(.*\\.js)",
      "dest": "frontend/$1",
      "headers": {
        "Content-Type": "application/javascript"
      }
    },
    {
      "src": "/(.*\\.(png|jpg|svg|ico))",
      "dest": "frontend/$1"
    },
    {
      "src": "/restaurant.html",
      "dest": "frontend/restaurant.html",
      "headers": {
        "Content-Type": "text/html"
      }
    },
    {
      "src": "/admin.html", 
      "dest": "frontend/admin.html",
      "headers": {
        "Content-Type": "text/html"
      }
    },
    {
      "src": "/(.*)",
      "dest": "frontend/index.html",
      "headers": {
        "Content-Type": "text/html"
      }
    }
  ]
}
